<%= image_tag "skiandboard", :class => 'resort-background'%>

<div class="resort-container">


<div class="resort-list">
<% @resorts.order(:region => 'asc').order(:name => 'asc').each do |resort| %>
  <div class="resort-list-item">
  <h3>
    <%= link_to resort.name, resort_path(resort.id) %> - <%= resort.region %>
  </h3>
    <%= link_to (image_tag resort.thumbnail), resort_path(resort.id), :class => "resort-thumbnail" %>
  </div>
<% end %>
</div>
</div>
